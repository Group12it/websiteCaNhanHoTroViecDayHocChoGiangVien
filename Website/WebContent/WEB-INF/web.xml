  <servlet>
    <servlet-name>UsersServlet</servlet-name>
    <servlet-class>controller.UsersServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ThreadServlet</servlet-name>
    <servlet-class>controller.ThreadServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ThreadServlet</servlet-name>
    <url-pattern>/ThreadServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UsersServlet</servlet-name>
    <url-pattern>/UsersServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CheckEmailServlet</servlet-name>
    <url-pattern>/CheckEmailServlet</url-pattern>
  </servlet-mapping>
